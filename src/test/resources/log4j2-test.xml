<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
  <Appenders>
    <File name="MyFile" fileName="src/test/resources/quiz-logs.log" immediateFlush="true" append="false">
      <PatternLayout charset="UTF-8" pattern="%msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="debug">
      <AppenderRef ref="MyFile"/>
    </Root>
  </Loggers>
</Configuration>